{
  "compilerOptions": {
    "target": "ES5",
    "jsx": "react",
    "module": "esnext",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "isolatedModules": true,
    "strict": true,
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "allowJs": true,
    "esModuleInterop": true,
    "outDir": "./dist"
  },
  "include": [
    "./src/**/*.*",
    "node_modules/@types"
  ],
}
